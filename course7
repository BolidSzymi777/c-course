#include<iostream>
#include<cmath>
using namespace std;

int main()
{
	//1. Oblicz średnią prędkość pojazdu

	//Wczytaj od użytkownika dystans(w kilometrach) i czas podróży(w godzinach).
	//Oblicz średnią prędkość i wypisz wynik w km / h.

	double dystans, czas, sr_predkosc, dlugosc, szerokosc, pole, przekatna, moc, godziny_pracy, koszt, cena_1kw, tax, income, lenght, height, paint1, paintl;
	int  godziny, minuty, sekundy, time;
	cout << "Podaj dystans: " << endl;
	cin >> dystans;
	cout << "Podaj czas podrozy: " << endl;
	cin >> czas;
	sr_predkosc = dystans / czas;
	cout << "Srednia predkosc: " << sr_predkosc << "km/h" <<endl;

		
		
		//2. Oblicz pole prostokąta i przekątną

		//Program wczytuje długość i szerokość prostokąta, a następnie oblicza jego pole i długość przekątnej.
	cout << "Podaj dlugosc prostokata:" << endl;
	cin >> dlugosc;
	cout << "Podaj szerokosc protokata:" << endl;
	cin >> szerokosc;
	pole = dlugosc * szerokosc;
	przekatna = sqrt(dlugosc * dlugosc + szerokosc * szerokosc);
	cout << "Pole: " << pole;
	cout << "Przekatna:" << przekatna << endl;
		//3. Przeliczanie sekund na godziny, minuty i sekundy

		//Wczytaj liczbę sekund i oblicz, ile to godzin, minut i sekund.
	cout << "Podaj czas w sekundach" << endl;
	cin >> time;
	godziny = time / 3600;
	minuty = time / 60 - godziny*60;
	sekundy = time - minuty * 60 - godziny * 3600;
	cout << "liczba:" << godziny << "godz" << minuty << "min" << sekundy << "sek" << endl;


		//4. Oblicz miesięczne zużycie energii

		//Program wczytuje moc urządzenia(w watach) oraz liczbę godzin pracy dziennie.
		//Oblicz koszt miesięcznego zużycia energii, przyjmując cenę 1 kWh od użytkownika.
	cena_1kw = 0.0011;
	cout << "Podaj moc urzadzenia:" << endl;
	cin >> moc;
	cout << "Podaj liczbe godzin pracy dziennie:" << endl;
	cin >> godziny_pracy;
	koszt = cena_1kw * godziny_pracy * moc * 30;
	cout << "Koszt miesiecznego zuzycia energi:" << koszt << "zl" << endl;
	

		//5. Oblicz należny podatek dochodowy

		//Wczytaj kwotę dochodu użytkownika i oblicz podatek wg uproszczonego wzoru :

	//jeśli dochód ≤ 30 000 zł → podatek 12 %,
	cout << "Podaj dochod";
	cin >> income;
	if (income <= 30000)
		tax = income * 0.12;
	else income > 30000;
		tax = 30000 * 0.12 + (income - 30000) * 0.32;
		cout << "Twoj podatek wynosi: " << tax <<"zl" <<endl;

		//jeśli dochód > 30 000 zł → podatek 12 % od 30 000 zł + 32 % od nadwyżki.

		//6. Oblicz ilość farby potrzebnej do pomalowania pokoju

		//Program wczytuje długość, szerokość i wysokość pokoju(w metrach), oraz informację, ile metrów kwadratowych można pomalować 1 litrem farby.
		//Oblicz, ile litrów farby trzeba kupić.
		cout << "Podaj ile metrow kwadratowych mozna pomalowac jednym litrem farby:" << endl;
		cin >> paint1;
		cout << "Podaj dlugosc:" << endl;
		cin >> lenght;
		cout << "Podaj wysokosc" << endl;
		cin >> height;
		paintl = lenght * height / paint1;
		cout << "Potrzeba " << paintl << "litrow do pomalowania sciany";
	return 0;
}
